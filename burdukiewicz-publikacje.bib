@article{reimannClassificationDeadLiving2020,
  title = {Classification of Dead and Living Microalgae {{Chlorella}} Vulgaris by Bioimage Informatics and Machine Learning},
  author = {Reimann, Ronny and Zeng, Bo and Jakopec, Martin and Burdukiewicz, Micha{\l} and Petrick, Ingolf and Schierack, Peter and R{\"o}diger, Stefan},
